                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                                <TextBlock Text="ADMINISTRAR EMPLEADOS" Style="{StaticResource botonComunText}" FontSize="22"/>
                            </StackPanel>
                        </RadioButton>

                        <!--BOTON PARA AGREGAR LOS EMPLEADOS-->
                        <RadioButton x:Name="btnAggEmpleado"  Style="{StaticResource ComunButton}"
                                Tag="{StaticResource color3}"
                                Command="{Binding ShowCustomerViewCommand}"  VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,0,0,20" FontSize="36" Visibility="Hidden" Checked="btnAggEmpleado_Checked">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                                <TextBlock Text="AGREGAR EMPLEADOS" Style="{StaticResource botonComunText}" FontSize="22"/>
                            </StackPanel>
                        </RadioButton>

                        <!--BOTON PARA EDITAR LOS EMPLEADOS-->
                        <RadioButton x:Name="btnEditEmpleado"  Style="{StaticResource ComunButton}"
                                Tag="{StaticResource color3}"
                                Command="{Binding ShowCustomerViewCommand}"  VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="20,0,0,20" FontSize="36" Visibility="Hidden" Checked="btnEditEmpleado_Checked">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                                <TextBlock Text="EDITAR EMPLEADOS" Style="{StaticResource botonComunText}" FontSize="22"/>
                            </StackPanel>
                        </RadioButton>

                        <!--BOTON PARA EDITAR LOS EMPLEADOS-->
                        <RadioButton x:Name="btnEliminarEmpleado"  Style="{StaticResource ComunButton}"
                                Tag="{StaticResource color3}"
                                Command="{Binding ShowCustomerViewCommand}"  VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20,0,0,20" FontSize="36" Visibility="Hidden" Checked="btnEliminarEmpleado_Checked">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                                <TextBlock Text="ELIMINAR EMPLEADOS" Style="{StaticResource botonComunText}" FontSize="22"/>
                            </StackPanel>
                        </RadioButton>

                        <!--BOTON PARA ADMINISTRAR LOS USUARIOS-->
                        <RadioButton x:Name="btnAdminUsers"  Style="{StaticResource ComunButton}"
                                Tag="{StaticResource color3}"
                                Command="{Binding ShowCustomerViewCommand}"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="118,340,0,0" FontSize="36" Visibility="Hidden" Checked="btnAdminUsers_Checked">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                                <TextBlock Text="ADMINISTRAR USUARIOS" Style="{StaticResource botonComunText}" FontSize="22"/>
                            </StackPanel>
                        </RadioButton>

                        <!--BOTON PARA AGREGAR LOS USUARIOS-->
                        <RadioButton x:Name="btnAggUser"  Style="{StaticResource ComunButton}"
                                Tag="{StaticResource color3}"
                                Command="{Binding ShowCustomerViewCommand}"  VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="20,0,0,20" FontSize="36" Visibility="Hidden" Checked="btnAggUser_Checked">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                                <TextBlock Text="AGREGAR USUARIOS" Style="{StaticResource botonComunText}" FontSize="22"/>
                            </StackPanel>
                        </RadioButton>

                        <!--BOTON PARA AGREGAR LOS USUARIOS-->
                        <RadioButton x:Name="btnAggUserBD"  Style="{StaticResource ComunButton}"
                                Tag="{StaticResource color3}"
                                Command="{Binding ShowCustomerViewCommand}"  VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="20,0,0,20" FontSize="36" Visibility="Hidden" Checked="btnAggUserBD_Checked">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                                <TextBlock Text="AGREGAR" Style="{StaticResource botonComunText}" FontSize="22"/>
                            </StackPanel>
                        </RadioButton>

                        <!--BOTON PARA AGREGAR BEBIDAS-->
                        <RadioButton x:Name="btnAggBebida"  Style="{StaticResource ComunButton}"
                                Tag="{StaticResource color3}"
                                Command="{Binding ShowCustomerViewCommand}"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="608,564,0,0" FontSize="36" Checked="btnAggBebida_Checked" Visibility="Hidden"  >
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                                <TextBlock Text="AGREGAR BEBIDA" Style="{StaticResource botonComunText}" FontSize="22"/>
                            </StackPanel>
                        </RadioButton>


                        <!--BOTON PARA EDITAR BEBIDAS-->
                        <RadioButton x:Name="btnEliminarBebida"  Style="{StaticResource ComunButton}"
