                        <!--BOTON PARA ELIMINAR LA ORDEN-->
                        <RadioButton x:Name="btnEliminarOrden"  Style="{StaticResource ComunButton}"
                                Tag="{StaticResource color3}"
                                Command="{Binding ShowCustomerViewCommand}" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,110,56"
                                Visibility="Hidden" FontSize="20">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                                <TextBlock Text="ELIMINAR ORDEN" Style="{StaticResource botonComunText}"/>
