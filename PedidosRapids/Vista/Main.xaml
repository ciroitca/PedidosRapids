<Window x:Class="PedidosRapids.Vista.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main" Height="700" Width="1000"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">
    <Border CornerRadius="15">
        <Border.Background>
            <ImageBrush ImageSource="/Img/LoginImage.jpg">
                <ImageBrush.RelativeTransform>
                    <RotateTransform Angle="-90" CenterX="0.5" CenterY="0.5"/>
                </ImageBrush.RelativeTransform>
            </ImageBrush>
        </Border.Background>

        <Border BorderThickness="2" Opacity="0.8" CornerRadius="15">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#FCE41A" Offset="0.5"/>
                    <GradientStop Color="#DC7C15" Offset="1.2"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                    <GradientStop Color="#D4320E" Offset="0.8"/>
                    <GradientStop Color="DarkOrange" Offset="0.1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <!-- Menú lateral -->
                    <ColumnDefinition Width="*"/>
                    <!-- Contenido principal -->
                </Grid.ColumnDefinitions>

                <!-- Menú Lateral -->
                <StackPanel Orientation="Vertical" 
                            Grid.Column="0" 
                            Background="#333333"
                            Margin="10,50,0,0"
                            VerticalAlignment="Top">
                    <Ellipse Width="70"
                             Height="70"
                             Fill="Blue"
                             Margin="10"/>
                </StackPanel>

                <!-- Contenido principal -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                    </Grid.RowDefinitions>

                    <!-- Header Section -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="10"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock/>

                        <!-- Minimize Button -->
                        <Button x:Name="btnMinimizar"
                                BorderThickness="1"
                                Content="_"
                                Foreground="white"
                                FontSize="14"
                                FontFamily="Montserrat"
                                Cursor="Hand"
                                Grid.Column="1"
                                Click="btnMinimizar_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#278BEF"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="AliceBlue"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="20" Height="20"
                                            CornerRadius="4"
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Close Button -->
                        <Button x:Name="btnCerrar"
                                Content="X"
                                FontSize="14"
                                FontFamily="Montserrat"
                                Foreground="White"
                                Cursor="Hand"
                                Grid.Column="2"
                                Width="25"
                                Height="25"
                                Background="Red"
                                BorderThickness="0"
                                Click="btnCerrar_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Blue"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Red"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="20" Height="20"
                                            CornerRadius="4"
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>
