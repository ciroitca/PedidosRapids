                                <TextBlock Text="EDITAR BEBIDAS" Style="{StaticResource botonComunText}" FontSize="22"/>
                            </StackPanel>
                        </RadioButton>

                        <!--BOTON PARA ADMINISTRAR LOS USUARIOS-->
