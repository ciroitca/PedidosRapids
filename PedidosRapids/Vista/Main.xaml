                             Command="{Binding ShowCustomerViewCommand}"  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="578,614,0,0" FontSize="36" Checked="btnEditarBebidaABD_Checked" Visibility="Hidden">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                                <TextBlock Text="ACTUALIZAR BEBIDA" Style="{StaticResource botonComunText}" FontSize="22"/>
