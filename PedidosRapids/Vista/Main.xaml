<Window x:Class="PedidosRapids.Vista.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:snack="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        Title="Main" Height="750" Width="1200"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    
    
    <Border CornerRadius="15">
       

        <Border BorderThickness="2" Opacity="0.8" CornerRadius="15">
           

            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                    <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0.8"/>
                    <GradientStop Color="{StaticResource primaryBackColor2}" Offset="0.1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <!-- Menú Navegación Lateral -->
                    <ColumnDefinition Width="*"/>
                    <!-- Contenido -->
                </Grid.ColumnDefinitions>

                <!-- Menú Lateral -->
                <Border CornerRadius="10,0,0,10"
                        Grid.Column="0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                            <GradientStop Color="{StaticResource primaryBackColor1}" Offset=".9"/>
                         </LinearGradientBrush>
                    </Border.Background>

                    <StackPanel>
                        
                        <!-- LOGO -->

                        <StackPanel Orientation="Horizontal"
                                    Height="100"
                                    Margin="10,15,0,40">
                            <Image Source="\Img\LogoBlanco.png" Height="100"/>
                            <TextBlock Margin="8,5,0,.5" Foreground="{StaticResource titleColor1}" 
                                       FontSize="40" 
                                       FontFamily="Montserrat"
                                       FontWeight="Bold"
                                       >
                                    <Run Text="RAPID"/>
                                    <LineBreak/>
                                    <Run Text="PLUS"/>
                            </TextBlock>
                        </StackPanel>

                        <!--Menu Buttons-->
                        
                        <!--Boton USUARIO-->
                        <RadioButton Style="{StaticResource MenuButton}"
                                 Tag="{StaticResource color8}"
                                 IsChecked="True"
                                 Command="{Binding ShowCustomerViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <snack:IconImage Icon="User" Style="{StaticResource menuButtonIcon}"/>  
                                <TextBlock Text="USUARIO (edit)" Style="{StaticResource menuButtonText}"/> <!--Yo le puse usuario pero debe ser según el usuario que se conecte así es el contenido que se muestra-->
                            </StackPanel>
                        </RadioButton>

                        <!--Boton PLATOS-->
                        <RadioButton Style="{StaticResource MenuButton}"
                                 Tag="{StaticResource color8}"
                                 Command="{Binding ShowCustomerViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <snack:IconImage Icon="BowlFood" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="PLATOS" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>

                        <!--Boton ORDENES-->

                        <RadioButton Style="{StaticResource MenuButton}"
                                Tag="{StaticResource color8}"
                                Command="{Binding ShowCustomerViewCommand}">   
                            <StackPanel Orientation="Horizontal">
                                <snack:IconImage Icon="CartShopping" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="ORDENES" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>

                        <!--Boton MESA-->

                        <RadioButton Style="{StaticResource MenuButton}"
                                 Tag="{StaticResource color8}"
                                 Command="{Binding ShowCustomerViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <snack:IconImage Icon="KitchenSet" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="MESAS" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>

                        <!--Boton CAMBIAR DE USUARIO-->

                        <RadioButton Style="{StaticResource MenuButton}"
                                 Tag="{StaticResource color8}"
                                 Command="{Binding ShowCustomerViewCommand}">
                            <StackPanel Orientation="Horizontal">
                                <snack:IconImage Icon="UserGroup" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Style="{StaticResource menuButtonText}">
                                    <Run Text="CAMBIAR"/>
                                    <LineBreak/>
                                    <Run Text="DE USUARIO"/>
                                </TextBlock>
                            </StackPanel>
                        </RadioButton>
                        
                        <!--Boton Salir-->

                        <!--Boton PLATOS-->
                        <RadioButton Style="{StaticResource MenuButton}"
                              Tag="{StaticResource color8}"
                              Command="{Binding ShowCustomerViewCommand}">
                                <StackPanel Orientation="Horizontal">
                                <snack:IconImage Icon="DoorOpen" Style="{StaticResource menuButtonIcon}"/>
                                <TextBlock Text="SALIR" Style="{StaticResource menuButtonText}"/>
                            </StackPanel>
                        </RadioButton>

                    </StackPanel>    
                    
                </Border>
                
                <!-- Contenido -->
                


                <!-- Contenido principal -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="25"/>
                    </Grid.RowDefinitions>

                    <!-- Header Section -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="25"/>
                            <ColumnDefinition Width="10"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock/>

                        <!-- Minimize Button -->
                        <Button x:Name="btnMinimizar"
                                BorderThickness="1"
                                Content="_"
                                Foreground="white"
                                FontSize="14"
                                FontFamily="Montserrat"
                                Cursor="Hand"
                                Grid.Column="1"
                                Click="btnMinimizar_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#278BEF"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="AliceBlue"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="20" Height="20"
                                            CornerRadius="4"
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <!-- Close Button -->
                        <Button x:Name="btnCerrar"
                                Content="X"
                                FontSize="14"
                                FontFamily="Montserrat"
                                Foreground="White"
                                Cursor="Hand"
                                Grid.Column="2"
                                Width="25"
                                Height="25"
                                Background="Red"
                                BorderThickness="0"
                                Click="btnCerrar_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Blue"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="Red"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="20" Height="20"
                                            CornerRadius="4"
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Border>
</Window>
